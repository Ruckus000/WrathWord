# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'WrathWord' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    # IMPORTANT: Legacy Architecture is REQUIRED for this project.
    # DO NOT set to true without:
    #   1. Upgrading react-native-mmkv to 3.x (2.x doesn't support TurboModules)
    #   2. Verifying all other dependencies support New Architecture
    #   3. Configuring Expo modules if using expo-haptics
    # See README.md "Technical Notes" for details.
    :new_arch_enabled => false
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Fix Hermes dSYM issue for archiving
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Ensure debug symbols are generated for all configurations
        config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO' if config.name == 'Release'

        # Specifically handle hermes-engine
        if target.name == 'hermes-engine'
          config.build_settings['GCC_GENERATE_DEBUGGING_SYMBOLS'] = 'YES'
          config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'NO'
        end

        # Remove duplicate -lc++ linker flags to prevent duplicate library warnings
        if config.build_settings['OTHER_LDFLAGS']
          flags = config.build_settings['OTHER_LDFLAGS']
          if flags.is_a?(Array)
            config.build_settings['OTHER_LDFLAGS'] = flags.uniq
          elsif flags.is_a?(String)
            config.build_settings['OTHER_LDFLAGS'] = flags.split.uniq.join(' ')
          end
        end

        # Suppress glog syscall deprecation warnings
        if target.name == 'glog'
          config.build_settings['GCC_WARN_DEPRECATED_FUNCTIONS'] = 'NO'
          # Add warning suppression flags
          ['WARNING_CFLAGS', 'OTHER_CFLAGS'].each do |flag_name|
            flags = config.build_settings[flag_name]
            if flags.is_a?(Array)
              flags = flags.dup
              flags << '-Wno-deprecated-declarations' unless flags.include?('-Wno-deprecated-declarations')
              config.build_settings[flag_name] = flags
            elsif flags.is_a?(String)
              config.build_settings[flag_name] = "#{flags} -Wno-deprecated-declarations" unless flags.include?('-Wno-deprecated-declarations')
            else
              config.build_settings[flag_name] = ['$(inherited)', '-Wno-deprecated-declarations']
            end
          end
        end

        # Suppress React Native bridge deprecation warnings
        if target.name.start_with?('React-')
          config.build_settings['GCC_WARN_DEPRECATED_DECLARATIONS'] = 'NO'
        end
      end
    end

    # Fix Hermes script phase output dependencies warning
    installer.pods_project.targets.each do |target|
      if target.name == 'hermes-engine'
        target.build_phases.each do |phase|
          if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase) &&
             phase.name&.include?('[Hermes] Replace Hermes')
            # Add output file to prevent "will be run during every build" warning
            if phase.output_paths.nil? || phase.output_paths.empty?
              phase.output_paths = [
                "${PODS_ROOT}/hermes-engine/destroot/Library/Frameworks/universal/hermes.xcframework"
              ]
            end
          end
        end
      end
    end
  end
end
